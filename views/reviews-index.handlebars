<h1>Reviews</h1>
<a href="/reviews/new">New Review</a>
<div class="row">
    {{#each reviews}}
    <div class="col-sm-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h2><a href="/reviews/{{this._id}}"> {{this.title}}</a> </h2>
                <small>{{this.movieTitle}}</small>
                <p>{{this.description}}</p>
            </div>
        </div>
    </div>

    {{/each}}
</div>
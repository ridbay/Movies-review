<fieldset>
  <legend>Edit Review</legend>
  <!-- TITLE -->
  <div class="form-group">
    <label for="title">Title</label><br>
    <input class="form-control" id="title" type="text" name="title" value="{{review.title}}"/>
  </div>

  <!-- MOVIE TITLE -->
  <div class="form-group">
    <label for="movieTitle">Movie Title</label><br>
    <input class="form-control" id="movieTitle" type="text" name="movieTitle" value="{{review.movieTitle}}" />
  </div>

  <!-- DESCRIPTION -->
  <div class="form-group">
    <label for="description">Description</label><br>
    <textarea class="form-control" id="description" name="description" rows="10" />{{review.description}}</textarea>
  </div>
</fieldset>